<?php
$this->headTitle('Recent Posts');

$this->mainMenu()->setActiveItemId('home');

$this->pageBreadcrumbs()->setItems(array(
            'Home'=>$this->url('home')
            ));
?>

<h1>Recent Posts</h1>

<a class="btn btn-default" href="
    <?php echo $this->url('application/default', 
            array('controller'=>'post', 'action'=>'add')); ?>">
    New Post
</a>

<?php foreach($this->recentPosts as $post): ?>

<h3>
    <a href="<?php echo $this->url('application/default', 
            array('controller'=>'post', 'action'=>'view', 'id'=>$post->getId())); ?>">
        <?php echo $this->escapeHtml($post->getTitle()); ?>
    </a>    
</h3>

<p>
    Tags: <?php echo $postManager->convertTagsToString($post); ?>    
</p>

<a href="<?php echo $this->url('application/default', 
            array('controller'=>'post', 'action'=>'edit', 'id'=>$post->getId())); ?>">
        Edit post
</a>

<p class="comments-header">
    <?php echo $postManager->getCommentCountStr($post); ?> | 
    <a href="<?php echo $this->url('application/default', 
            array('controller'=>'post', 'action'=>'view', 'id'=>$post->getId()),
            array('fragment'=>'comment')); ?>">
        Add new comment
    </a>
</p>

<p>    
    <?php echo $this->escapeHtml($post->getContent()); ?>
</p>

<?php endforeach; ?>


